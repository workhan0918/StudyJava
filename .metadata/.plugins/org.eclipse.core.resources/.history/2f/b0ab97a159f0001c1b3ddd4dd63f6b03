package com.varxyz.jv200.mod009;

import java.util.ArrayList;
import java.util.List;

import com.varxyz.banking.domain.Customer;
import com.varxyz.banking.domain.CustomerService;

public class CustomerServiceImpl2 implements CustomerService {
	private List<Customer> customerList = new ArrayList<>();

	
	private boolean isExist(Customer customer) {
		for(Customer c : customerList) {
			if(customer.getSsn().equals(c.getSsn())) {
				return true;
			}
		}
		return false;
	}
	
	@Override
	public void addCustomer(Customer customer) {
		if(!isExist(customer)) {
			customerList.add(customer);
		}
		
	}

	@Override
	public List<String> getCustomerByssn(String ssn) {
		if(map.containsKey(ssn)) {
			return map.get(ssn);
		}
		return null;
	}

	@Override
	public Customer getAllCustomers(String ssn) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void getNumOfCustomers() {
		// TODO Auto-generated method stub
		
	}
}
