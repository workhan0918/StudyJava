package com.varxyz.jv200.mod007;

public class Libary {
	public Book Lbook;
	public int[] serialArray = new int[100];
	
	public Libary() {
		
	}
	
	public void getBook(int serial) {
		System.out.println("빌리시는 책 제목 : " + Lbook.getName() + 
					"\n책 시리얼 : " + serialArray[0]);
	}
	
	public void addBook(Book book) {
		this.Lbook = book;
		for (int i = 0; i < serialArray.length; i++) {
			if (serialArray[i] == 0) {
				serialArray[i] = this.Lbook.getSerial();
				break;
			}
		}
	}
	
}
