package com.varxyz.jv200.mod007;

public class Libary {
	private static Book bookInfo;
	private Book[] bookArray = new Book[100];
	
	private static void Libary() {
		
	}
	
	public static void getBook(int serial) {
		for (int i = 0; i < bookArray.length; i++) {
			if (serial == bookArray[i].getSerial()) {
				System.out.println("book name : " + bookArray[i].getName() + 
						"\nbook serial : " + bookArray[i].getSerial());
				break;
			}else if( bookArray[i] == null) {
				System.err.println("error");
			}
		}
	}
	
	public static Book addBook(Book book) {
		for (int i = 0; i < bookArray.length; i++) {
			if (bookArray[i] == null) {
				bookArray[i] = book;
				break;
			}
		}
		
		return book;
	}

	public Book getBookInfo() {
		return bookInfo;
	}

	public void setBookInfo(Book bookInfo) {
		Libary.bookInfo = bookInfo;
	}

}
